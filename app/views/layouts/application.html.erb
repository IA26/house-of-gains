<!DOCTYPE html>
<html>
  <head>
    <title>Houseofgains</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <% if current_user %>
    Logged in as <%= current_user.name %>.
    <p id="links"><%= link_to "Check all gyms", root_url %><p>
    <p id="links"><%= link_to "View Profile", user_path(current_user[:id]) %><p>
    <p> <%= link_to "Edit Profile", edit_user_path(current_user) %>
    <p id="links"><%= link_to "Log out", session_path("current"), method: "delete" %><p>
    <% else %> 
      <%= link_to "Sign Up", signup_path %>
      <%= link_to "Log in", login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>

