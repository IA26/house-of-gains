<!DOCTYPE html>
<html>
  <head>
    <title>Houseofgains</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if current_user %>
    Logged in as <%= current_user.name %>.
    <%= link_to "Check all gyms", root_url %>
    <%= link_to "View Profile", user_path(current_user[:id]) %>
    <%= link_to "Edit Profile", edit_user_path(current_user) %>
    <%= link_to "Log out", session_path("current"), method: "delete" %>
    <% else %> 
      <%= link_to "Sign Up", signup_path %>
      <%= link_to "Log in", login_path %>
    <% end %>

    <% flash.each do |name, msg| %>
     <div id='flash'><%= content_tag :div, msg, id: "flash_#{name}" %> </div>
    <% end %>
    <%= yield %>
  </body>
</html>
